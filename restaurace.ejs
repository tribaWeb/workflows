  </div>
  <div class="menu-controls">
    <div id="pagination"></div>
  </div>
</section>

  <!-- Galerie -->
  <section id="gallery" class="gallery">
    <h2>Galerie</h2>
    <div class="gallery-container">
      <img src="/imgs/restauraceimg/food1.jpg" alt="Jídlo 1">
      <img src="/imgs/restauraceimg/food2.jpg" alt="Jídlo 2">
      <img src="/imgs/restauraceimg/food3.jpg" alt="Jídlo 3">
      <img src="/imgs/restauraceimg/food4.jpg" alt="Jídlo 4">
    </div>
  </section>

  <!-- Formulář na akce -->
  <section id="events" class="events">
    <h2>Rezervujte akce</h2>
    <form>
      <label for="name">Jméno:</label>
      <input type="text" id="name" name="name" required>

      <label for="email">E-mail:</label>
      <input type="email" id="email" name="email" required>

      <label for="event-date">Datum akce:</label>
      <input type="date" id="event-date" name="event-date" required>

      <label for="message">Detaily akce:</label>
      <textarea id="message" name="message" rows="5" required></textarea>

      <button type="submit">Odeslat</button>
    </form>
  </section>

  <!-- Kontakt -->
  <footer id="contact">
    <div class="contact">
      <h2>Kontaktujte nás</h2>
      <div class="container">
        <p>Adresa: Náměstí 123, Město</p>
        <p>Telefon: +420 123 456 789</p>
        <p>Email: info@fiktivnirestaurace.cz</p>
      </div>
    </div>
  </footer>
  <div class="floating-menu" id="floatingMenu">
    <div class="toggle-arrow" onclick="toggleMenu()">&#9664;</div>
    <div class="menu-content">
      <button onclick="goHome()">Domů</button>
    </div>
  </div>
  
  <script src="restaurace.js"></script>
  </script>

</body>
</html>
